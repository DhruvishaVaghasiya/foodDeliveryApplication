<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_orange"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context=".activity.ShippingSplashPageActivity">

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/shipping"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_60sdp"
        app:tint="@color/orange" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fast_shipping"
        android:textSize="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:textColor="@color/grey"
        android:layout_gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/splash_line"
        android:fontFamily="sans-serif"
        android:textColor="@color/grey"
        android:layout_gravity="center"
        android:textSize="@dimen/_16sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_layout" />
        <TextView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:background="@drawable/round_bg_layout" />

        <TextView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:background="@drawable/bg_layout" />
        <TextView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:background="@drawable/bg_layout" />
        <TextView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:background="@drawable/bg_layout" />
    </LinearLayout>
    <ImageView
        android:id="@+id/nextIcon"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:src="@drawable/nextarrow"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_110sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:tint="@color/orange"/>
</LinearLayout>